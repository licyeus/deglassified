!!!
%html{'ng-app' => 'deglassified'}
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content:'width=device-width, initial-scale=1.0' }
    %title(ng-bind-template='{{pageTitle}} - Deglassified')
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag :modernizr
    = csrf_meta_tags
    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-43961581-3', 'deglassified.com');
        ga('send', 'pageview');
  %body

    #sidebar(ng-controller='sideBarCtrl')
      %h1
        %a(href='/') Deglassified
      %hr
      %p.lead Cataloguing businesses with policies against Google Glass.

      %a.main-modal-button(ui-sref='login')
        %i.fi-share
        %span Share Your Local Glass-Free Businesses

      %div(ui-view)

      .contact
        %a(href='http://twitter.com/Deglassified' target='_blank')
          %i.fi-social-twitter
          Contact Us
        %a(href='http://github.com/licyeus/deglassified' target='_blank' style="margin-left: 20px;")
          %i.fi-social-github
          Contribute
      .legal
        Google Glass&trade; is a trademark of Google Inc.

    #map

    #restriction-legend
      %ul
        %li
          %span.red
          Full Ban
        %li
          %span.orange
          Specific Restriction

    #mainModal.reveal-modal(data-reveal)
      %div(ui-view='mainModal')
      %a.close-reveal-modal &#215;

    = javascript_include_tag 'application'
